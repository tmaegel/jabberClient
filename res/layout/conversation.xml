<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="match_parent" 
	android:layout_height="match_parent" 
	android:orientation="vertical" >

	<ListView
		android:id="@+id/conv_history"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:dividerHeight="0dp"
		android:divider="@null"/>

	<RelativeLayout
		android:id="@+id/conv_form"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:orientation="vertical" >

		<EditText
			android:id="@+id/conv_input_message"
			android:layout_toLeftOf="@+id/conv_send"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="textMultiLine"
			android:ems="10"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"/>

		<Button
			android:id="@+id/conv_send"
			android:text="@string/conv_send"
			android:layout_alignBottom="@+id/conv_input_message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"/>
	
	</RelativeLayout>

</RelativeLayout>
